<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/utama2"
    tools:context=".MainActivity">

    <View
        android:id="@+id/viewAtas"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/utama"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/viewBawah"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/utama"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/musikku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Musikku"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewAtas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/btnMenu"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:backgroundTint="@color/utama"
        app:layout_constraintBottom_toBottomOf="@+id/viewAtas"
        app:layout_constraintEnd_toStartOf="@+id/musikku"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="@+id/viewAtas"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu">
    </ImageView>

    <ListView
        android:id="@+id/listlagu"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintBottom_toTopOf="@+id/viewBawah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewAtas"
        app:layout_constraintVertical_bias="0.447">
    </ListView>


</androidx.constraintlayout.widget.ConstraintLayout>